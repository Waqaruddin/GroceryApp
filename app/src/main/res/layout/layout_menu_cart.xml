<RelativeLayout android:layout_width="38dp" android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="28dp"
        android:layout_height="wrap_content"
        android:id="@+id/cart_icon"
        android:src="@drawable/ic_baseline_shopping_cart_white"
        />


    <TextView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/text_view_cart_count"
        android:layout_alignParentRight="true"
        android:text="5"
        android:gravity="center"
        android:textSize="10dp"
        android:background="@drawable/badge_circle_fill"
        android:textColor="#fff"/>




</RelativeLayout>