<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include layout = "@layout/app_bar"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height= "0dp"
        android:layout_weight="0.5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount to pay"
            android:id="@+id/text_view_amount"
            android:textSize="32dp"
            android:layout_centerInParent="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_total_amount"
            android:layout_centerInParent="true"
            android:layout_below="@id/text_view_amount"
            android:textSize="32dp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_subtotal"
            android:text="Subtotal"
            android:layout_marginTop="30dp"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_discount"
            android:text="Discount"
            android:layout_marginTop="30dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/text_view_subtotal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_order_amount"
            android:text="Order Amount"
            android:layout_marginTop="30dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/text_view_discount"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/button_pay_online"
            android:text="Pay online"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:textAllCaps="false"
            android:background="@drawable/button_rounded"
            android:textColor="#fff"/>


        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/button_pay_delivery"
            android:text="Pay cah on delivery"
           android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:textAllCaps="false"
            android:background="@drawable/button_rounded"
            android:textColor="#fff"/>

    </RelativeLayout>





</LinearLayout>